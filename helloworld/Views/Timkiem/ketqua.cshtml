@model IEnumerable<helloworld.Models.TRUYEN> 
@{
    ViewBag.Title = "ketqua";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<span style="color:blue">Kết quả</span>
<span style="color:red">@ViewBag.thongbao</span>   
<!DOCTYPE html>
<html>
<head>
    <style>
        .container1 {
            position: relative;
            width: auto;
        }


        .image {
            display: inline-block;
            width: auto;
            height: auto;
        }

        .overlay {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            height: 100%;
            width: 100%;
            opacity: 0;
            transition: .5s ease;
            background-image: url(../../images/To_aru_majutsu_no_index3-780x405.jpg);
            background-repeat: no-repeat;
            background-position: right;
        }

        .container1:hover .overlay {
            opacity: 1;
        }

        .text {
            color: white;
            background-color: #FF6E40;
            border-radius: 15px;
            font-size: 50px;
            position: center;
            top: auto;
            left: auto;
            transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            margin-left: 50%;
        }

        li {
            list-style: none;
            display: inline-block;
        }

        body#bg {
            background-image: url("../../images/backgroundlast.jpg");
            background-attachment: fixed;
        }
    </style>
</head>
<body id="bg">
    <div class="container">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- số slide-->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">

                <div class="item active">
                    <img src="~/images/Spring17Preview.jpg" alt="img1" style="width:100%;">
                    <div class="carousel-caption">
                        <h3 style="color:aliceblue">Manga mùa xuân 2017</h3>
                        <p style="color:aliceblue">Click để xem thông tin!</p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/images/springanime2017.jpg" alt="img2" style="width:100%;">
                    <div class="carousel-caption">
                        <h3 style="color:aliceblue">Top manga hiện tại</h3>
                        <p style="color:aliceblue">Click để xem thông tin!</p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/images/Winter2016SeasonPreview.jpg" alt="img3" style="width:100%;">
                    <div class="carousel-caption">
                        <h3 style="color:aliceblue">Manga mùa đông 2017</h3>
                        <p style="color:aliceblue">Click để xem thông tin!</p>
                    </div>
                </div>

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
            <div>
                @foreach (var item in Model)
            {
                    <div>
                        <a href="@Url.Action("Detail","Home",new {id=item.Matruyen})">
                            <div class="container1">
                                <img alt="@item.Tentruyen" src="~/images/@item.Anhbia" class="image" />
                                <div class="overlay">
                                    <div class="text"><span>@item.Tentruyen</span></div>
                                </div>

                            </div>

                        </a>
                    </div>
                }
            </div>
            <div style="clear: both"></div>
            @*<span style="color:red"> Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount </span>
            <div class="menutrang">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
            </div>*@

            <style>
                .menutrang li {
                    display: inline;
                }
            </style>
</body>
</html>